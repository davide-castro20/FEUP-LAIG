    <materials>
    <!--  NOTE: the "MATERIAL" block may be repeated as required. Each defined material requires a distinct "id". At least one material should be present.  -->
        <material id="Generic">
            <shininess value="10.0"/>
            <ambient r="0.5" g="0.5" b="0.5" a="1.0"/>
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0"/>
